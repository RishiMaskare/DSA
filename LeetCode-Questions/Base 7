class Solution {
public:
    string convertToBase7(int num) {
        if(num == 0) return "0";
        bool isNeg = num < 0;
        num = abs(num);
        string ans = "";
        while(num > 0) {
            int rem = num % 7;
            ans += (rem+'0');
            num /= 7;
        }
        reverse(ans.begin(), ans.end());
        return isNeg ? "-"+ans : ans;
    }
};
