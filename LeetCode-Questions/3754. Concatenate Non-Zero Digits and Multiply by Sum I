class Solution {
public:
    long long sumAndMultiply(int n) {
        int sum = 0;
        long long pow = 1, num = 0;
        while(n > 0) {
            int ld = n%10;
            if(ld) {
                sum += ld;
                num += pow*ld;
                pow *= 10;
            }
            n /= 10;
        }
        return sum*num;
    }
};
