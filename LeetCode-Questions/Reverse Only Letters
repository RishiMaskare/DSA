class Solution {
public:
    string reverseOnlyLetters(string s) {
        string ans = s;
        int i = 0, j = s.size()-1;
        while(i < j) {
            if(isalpha(ans[i]) && isalpha(ans[j])) {
                swap(ans[i], ans[j]);
                i++; j--;
            } else if(isalpha(ans[i])) {
                j--;
            } else {
                i++;
            }
        }
        return ans;
    }
};
